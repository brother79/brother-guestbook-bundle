<div class="brother-guestbook-form-container col-xs-9 col-sm-7 col-md-4">
    {{ form_start(form, {'action': path('brother_guestbook_create_ajax'), 'method': 'POST', 'attr': {'class': 'form-horizontal brother-guestbook-form', 'role': 'form'} }) }}
        <div class="form-error">{{ form_errors(form.name) }}</div>
        <div class="input-group form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            {{ form_widget(form.name, {'attr': {'placeholder': 'form.entry.name'|trans({}, 'BrotherGuestbookBundle'), 'class': 'form-control'}}) }}
        </div>

        <div class="form-error">{{ form_errors(form.email) }}</div>
        <div class="input-group form-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            {{ form_widget(form.email, {'attr': {'placeholder': 'form.entry.email'|trans({}, 'BrotherGuestbookBundle'), 'class': 'form-control'}}) }}
        </div>

        <div class="form-error">{{ form_errors(form.comment) }}</div>
        <div class="form-group">
            {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'rows': '10','placeholder': 'form.entry.enter_your_comment_here'|trans({}, 'BrotherGuestbookBundle') } }) }}
        </div>

        {{ form_widget(form) }}

        <div class="form-btns">
            <button class="btn btn-success">{{ 'form.entry.submit'|trans({}, 'BrotherGuestbookBundle') }}</button>
        </div>
    {{ form_end(form) }}
</div><!-- /brother-guestbook-form-container -->